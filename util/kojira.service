[Unit]
Description=Koji repo administration
Documentation=https://docs.pagure.org/koji/server_howto/

After=network.target

[Service]
ExecStart=/usr/sbin/kojira \
       --fg \
       --force-lock \
       --verbose
Restart=on-failure
RestartSec=60s
PrivateTmp=true

[Install]
WantedBy=multi-user.target
